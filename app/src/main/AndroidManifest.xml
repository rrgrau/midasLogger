<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.ac.sussex.midasLogger">

    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="uk.ac.sussex.midasLogger.Start"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="uk.ac.sussex.midasLogger.GatherData"
            android:label="Gather data"
            android:theme="@style/NoActionBar" >
        </activity>
        <activity
            android:name="uk.ac.sussex.midasLogger.Settings"
            android:label="@string/settingsTitle" >
        </activity>
    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


</manifest>
